{
  "name": "kor",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "turbo db:generate --filter=@workspace/db",
    "db:push": "turbo db:push --filter=@workspace/db",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "turbo typecheck",
    "test:e2e": "turbo test:e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@workspace/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "turbo": "^2.8.1",
    "typescript": "5.9.3",
    "vitest": "^3.0.0"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["@biomejs/biome", "better-sqlite3", "esbuild"]
  }
}
