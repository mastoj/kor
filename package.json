{
  "name": "kor",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "turbo db:generate --filter=@workspace/db",
    "db:push": "turbo db:push --filter=@workspace/db",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "turbo test:e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.1",
    "typescript": "5.9.3",
    "vitest": "^3.0.0"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild"]
  }
}